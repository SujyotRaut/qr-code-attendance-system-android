<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.QRCodeAttendanceSystem"
        tools:targetApi="31" >

        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.QRCodeAttendanceSystem" />

        <activity
            android:name=".activities.QRCodeScannerActivity"
            android:exported="false"
            android:label="@string/title_activity_scanner"
            android:theme="@style/Theme.QRCodeAttendanceSystem" />

        <activity
            android:name=".activities.MarkAttendanceActivity"
            android:exported="false"
            android:label="@string/title_activity_mark_attendance"
            android:theme="@style/Theme.QRCodeAttendanceSystem" />

        <activity
            android:name=".activities.ViewAttendanceActivity"
            android:exported="false"
            android:label="@string/title_activity_view_attendance"
            android:theme="@style/Theme.QRCodeAttendanceSystem" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.QRCodeAttendanceSystem" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

    </application>

</manifest>